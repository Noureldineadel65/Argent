<section class="loggedIn" id="loggedIn">
    <nav class="main-background">
        <div class="container">
            <div class="nav-wrapper">
                <a href="#" class="brand-logo">Argent
                    </span></a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Hello, {{displayName}}!</a></li>
                </ul>
            </div>
            <ul class="sidenav" id="mobile-demo">

                <li><a href="../index.html" class="home sidenav-close">Home</a></li>
                <li><a href="#!" class="logout sidenav-close">Logout</a></li>
                <li><a href="#!" class="dangerous deleteAccount sidenav-close">Delete Account</a></li>

                <li><a href="#!" class="dangerous resetData sidenav-close">Reset Data</a></li>
            </ul>
            <ul id="dropdown1" class="dropdown-content">
                <li><a href="../index.html" class="main-color home">Home</a></li>
                <li><a href="#!" class="main-color logout">Logout</a></li>
                <li class="divider"></li>
                <li><a href="#!" class="dangerous deleteAccount">Delete Account</a></li>

                <li><a href="#!" class="dangerous resetData">Reset Data</a></li>
            </ul>
        </div>
    </nav>
    <main>
        <div class="container section">
            <div class="row" id="counter">
                <div class="col xl12 m6 total-amount">
                    <span id="total">0.00</span>
                </div>
                <div class="col xl12 m6" id="totals">
                    <div class="income-box">
                        <span>INCOME</span>
                        <span>
                            <span class="sign">+</span> <span id="income-total">0.00</span>
                        </span>
                    </div>
                    <div class="expenses-box">
                        <span>EXPENSES</span>
                        <span>
                            <span class="sign">-</span> <span id="expenses-total">0.00</span>
                            <span class="total-percentage-box">
                                <span id="total-percentage">0</span>%
                            </span>
                        </span>
                    </div>
                </div>

            </div>
        </div>
        <div class="container section">
            <div class="row">
                <div class="col s12 m6">
                    <form class="card z-depth-0" id="item-form">
                        <div class="card-content">
                            <span class="card-title main-color">Add Item:</span>
                            <div class="input-field">
                                <input type="text" id="item-name" required autocomplete="off">
                                <label for="item-name">Item Name</label>
                            </div>
                            <div class="input-field">
                                <input type="text" id="item-cost" required autocomplete="off">
                                <label for="item-cost">Item Cost ($)</label>
                            </div>
                            <div class="input-field">
                                <select>
                                    <option value="" disabled selected>Choose Type</option>
                                    <option value="income">Income</option>
                                    <option value="expense">Expenses</option>
                                </select>

                            </div>
                            <div class="input-field center">
                                <button class="btn-large main-background waves-effect waves-light" id="add-item">Add
                                    Item</button>
                            </div>
                            <div class="input-field center">
                                <p class="red-text hide" id="error"></p>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col s12 m6">
                    <div class="canvas" class="overflow-hidden"></div>
                </div>
            </div>
        </div>
        <div class="container" id="showcase">
            <div class="row">
                <div class="col s12 m6">
                    <h5>Income</h5>
                    <ul class="incomes" id="incomes">

                    </ul>
                </div>
                <div class="col s12 m6">
                    <h5>Expenses</h5>
                    <ul class="expenses" id="expenses">

                    </ul>
                </div>
            </div>
        </div>
    </main>
</section>